<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <ImageButton
        android:id="@+id/postImageButton"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="55dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <include
        android:id="@+id/update_post_toolbar"
        layout="@layout/app_bar_layout"/>

    <EditText
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postImageButton"
        android:layout_marginTop="18dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write your post content here..."
        android:inputType="textMultiLine"
        android:padding="15dp" />

    <Button
        android:id="@+id/updatePostButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postContent"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="Update Post"
        android:textSize="18dp" />

</RelativeLayout>